<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_isp_transfer_payment_tree" model="ir.ui.view">
        <field name="name">isp.bank.transfer.payment.tree</field>
        <field name="model">isp.bank.transfer.payment</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="subscription_id"/>
                <field name="amount"/>
                <field name="bank_name"/>
                <field name="reference"/>
                <field name="state"/>
                <field name="review_deadline"/>
                <field name="needs_attention"/>
            </list>
        </field>
    </record>

    <record id="view_isp_transfer_payment_form" model="ir.ui.view">
        <field name="name">isp.bank.transfer.payment.form</field>
        <field name="model">isp.bank.transfer.payment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_submit" type="object" string="Submit"/>
                    <button name="action_approve" type="object" string="Approve" groups="isp_core.group_isp_admin,isp_core.group_isp_billing"/>
                    <button name="action_reject" type="object" string="Reject" groups="isp_core.group_isp_admin,isp_core.group_isp_billing"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,in_review,approved,rejected,applied"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="partner_id"/>
                        <field name="subscription_id"/>
                    </group>
                    <group>
                        <field name="bank_name"/>
                        <field name="reference"/>
                        <field name="amount"/>
                        <field name="currency_id"/>
                        <field name="transfer_datetime"/>
                    </group>
                    <group>
                        <field name="invoice_ids" widget="many2many_tags"/>
                        <field name="accounting_payment_id"/>
                    </group>
                    <group>
                        <field name="review_deadline"/>
                        <field name="needs_attention"/>
                        <field name="reviewer_id"/>
                    </group>
                    <group>
                        <field name="rejection_reason"/>
                        <field name="notes"/>
                        <field name="attachment_ids" widget="many2many_binary"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_isp_transfer_payment_pivot" model="ir.ui.view">
        <field name="name">isp.bank.transfer.payment.pivot</field>
        <field name="model">isp.bank.transfer.payment</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="state" type="row"/>
                <field name="amount" type="measure"/>
                <field name="id" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="view_isp_transfer_payment_graph" model="ir.ui.view">
        <field name="name">isp.bank.transfer.payment.graph</field>
        <field name="model">isp.bank.transfer.payment</field>
        <field name="arch" type="xml">
            <graph string="Transfer Payments">
                <field name="state" type="row"/>
                <field name="amount" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="action_isp_transfer_payment" model="ir.actions.act_window">
        <field name="name">Transfer Payments</field>
        <field name="res_model">isp.bank.transfer.payment</field>
        <field name="view_mode">list,form,pivot,graph</field>
    </record>

    <menuitem id="menu_isp_transfer_payment" name="Transfer Payments" parent="isp_core.menu_isp_operations" action="action_isp_transfer_payment" sequence="60"/>
</odoo>
