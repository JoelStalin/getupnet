<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_isp_subscription_form_billing" model="ir.ui.view">
        <field name="name">isp.subscription.form.billing</field>
        <field name="model">isp.subscription</field>
        <field name="inherit_id" ref="isp_core.view_isp_subscription_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_generate_invoice" type="object" string="Generate Invoice" groups="isp_core.group_isp_admin,isp_core.group_isp_billing"/>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Billing">
                    <group>
                        <field name="next_invoice_date"/>
                        <field name="last_invoice_id"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
