<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mail_template_transfer_submitted" model="mail.template">
        <field name="name">Transfer Submitted</field>
        <field name="model_id" ref="model_isp_bank_transfer_payment"/>
        <field name="subject">Pago por transferencia recibido</field>
        <field name="email_from">{{ (user.email_formatted or '') }}</field>
        <field name="partner_to">{{ object.partner_id.id }}</field>
        <field name="use_default_to" eval="False"/>
        <field name="body_html" type="html">
            <p>Hola <t t-out="object.partner_id.name or ''"/></p>
            <p>Hemos recibido tu reporte de pago por transferencia.</p>
            <ul>
                <li>Referencia: <strong><t t-out="object.reference or ''"/></strong></li>
                <li>Monto: <strong><t t-out="object.amount or ''"/></strong></li>
            </ul>
            <p>Validaremos el pago en un plazo de 24/48 horas.</p>
        </field>
    </record>

    <record id="mail_template_transfer_approved" model="mail.template">
        <field name="name">Transfer Approved</field>
        <field name="model_id" ref="model_isp_bank_transfer_payment"/>
        <field name="subject">Pago por transferencia aprobado</field>
        <field name="email_from">{{ (user.email_formatted or '') }}</field>
        <field name="partner_to">{{ object.partner_id.id }}</field>
        <field name="use_default_to" eval="False"/>
        <field name="body_html" type="html">
            <p>Hola <t t-out="object.partner_id.name or ''"/></p>
            <p>Tu pago por transferencia ha sido aprobado y aplicado.</p>
            <p>Gracias por tu pago.</p>
        </field>
    </record>

    <record id="mail_template_transfer_rejected" model="mail.template">
        <field name="name">Transfer Rejected</field>
        <field name="model_id" ref="model_isp_bank_transfer_payment"/>
        <field name="subject">Pago por transferencia rechazado</field>
        <field name="email_from">{{ (user.email_formatted or '') }}</field>
        <field name="partner_to">{{ object.partner_id.id }}</field>
        <field name="use_default_to" eval="False"/>
        <field name="body_html" type="html">
            <p>Hola <t t-out="object.partner_id.name or ''"/></p>
            <p>Tu pago por transferencia fue rechazado.</p>
            <p>Motivo: <t t-out="object.rejection_reason or ''"/></p>
        </field>
    </record>
</odoo>
