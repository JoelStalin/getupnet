<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_isp_job_tree" model="ir.ui.view">
        <field name="name">isp.provisioning.job.tree</field>
        <field name="model">isp.provisioning_job</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="job_type"/>
                <field name="subscription_id"/>
                <field name="device_id"/>
                <field name="state"/>
                <field name="requested_at"/>
                <field name="attempts"/>
            </list>
        </field>
    </record>

    <record id="view_isp_job_form" model="ir.ui.view">
        <field name="name">isp.provisioning.job.form</field>
        <field name="model">isp.provisioning_job</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_run" type="object" string="Run"/>
                    <field name="state" widget="statusbar" statusbar_visible="queued,running,success,failed"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="job_type"/>
                        <field name="subscription_id"/>
                        <field name="device_id"/>
                        <field name="sector_id"/>
                    </group>
                    <group>
                        <field name="requested_by"/>
                        <field name="requested_at"/>
                        <field name="executed_at"/>
                        <field name="attempts"/>
                        <field name="max_attempts"/>
                    </group>
                    <group>
                        <field name="error_message"/>
                        <field name="traceback"/>
                    </group>
                    <group>
                        <field name="payload_json"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
