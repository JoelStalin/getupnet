<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_isp_service_plan_tree" model="ir.ui.view">
        <field name="name">isp.service.plan.tree</field>
        <field name="model">isp.service_plan</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="service_type"/>
                <field name="billing_cycle"/>
                <field name="down_mbps"/>
                <field name="up_mbps"/>
                <field name="price"/>
            </list>
        </field>
    </record>

    <record id="view_isp_service_plan_form" model="ir.ui.view">
        <field name="name">isp.service.plan.form</field>
        <field name="model">isp.service_plan</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="service_type"/>
                    </group>
                    <group>
                        <field name="down_mbps"/>
                        <field name="up_mbps"/>
                        <field name="price"/>
                        <field name="currency_id"/>
                        <field name="billing_cycle"/>
                    </group>
                    <group>
                        <field name="mikrotik_profile"/>
                        <field name="qos_policy"/>
                        <field name="suspend_after_days"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
