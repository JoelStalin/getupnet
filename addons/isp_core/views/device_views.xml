<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_isp_device_tree" model="ir.ui.view">
        <field name="name">isp.device.tree</field>
        <field name="model">isp.device</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="device_type"/>
                <field name="sector_id"/>
                <field name="mgmt_ip"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="view_isp_device_form" model="ir.ui.view">
        <field name="name">isp.device.form</field>
        <field name="model">isp.device</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="device_type"/>
                        <field name="sector_id"/>
                        <field name="status"/>
                    </group>
                    <group>
                        <field name="mgmt_ip"/>
                        <field name="mgmt_port"/>
                        <field name="tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
