<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_isp_onu_assignment_tree" model="ir.ui.view">
        <field name="name">isp.onu.assignment.tree</field>
        <field name="model">isp.onu.assignment</field>
        <field name="arch" type="xml">
            <list>
                <field name="onu_id"/>
                <field name="subscription_id"/>
                <field name="sector_id"/>
                <field name="active"/>
                <field name="assigned_at"/>
                <field name="unassigned_at"/>
            </list>
        </field>
    </record>

    <record id="view_isp_onu_assignment_form" model="ir.ui.view">
        <field name="name">isp.onu.assignment.form</field>
        <field name="model">isp.onu.assignment</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="onu_id"/>
                        <field name="subscription_id"/>
                        <field name="active"/>
                    </group>
                    <group>
                        <field name="assigned_at"/>
                        <field name="unassigned_at"/>
                    </group>
                    <group>
                        <field name="vlan"/>
                        <field name="profile"/>
                    </group>
                    <group>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_isp_onu_assignment" model="ir.actions.act_window">
        <field name="name">ONU Assignments</field>
        <field name="res_model">isp.onu.assignment</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_isp_onu_assignment" name="ONU Assignments" parent="menu_isp_inventory" action="action_isp_onu_assignment" sequence="20"/>

</odoo>
